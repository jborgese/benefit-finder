    {
      "id": "snap-federal-social-security",
      "programId": "snap-federal",
      "name": "SNAP Social Security Number Requirement",
      "description": "All household members applying for benefits must provide or apply for a Social Security Number",
      "ruleLogic": {
        "or": [
          {
            "var": "hasSocialSecurityNumber"
          },
          {
            "var": "hasAppliedForSSN"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "You and everyone in your household applying for SNAP must have a Social Security Number or have applied for one. If you don't have an SSN, you can apply for SNAP benefits while you apply for an SSN. Household members who are not applying for benefits (such as ineligible immigrants) do not need to provide an SSN.",
      "requiredFields": [
        "hasSocialSecurityNumber",
        "hasAppliedForSSN"
      ],
      "requiredDocuments": [
        {
          "id": "social-security-card",
          "name": "Social Security Card or Proof of SSN",
          "description": "Social Security card or other document showing SSN",
          "required": true,
          "alternatives": [
            "Medicare card",
            "Medicaid card",
            "SSA benefit letter",
            "W-2 or 1099"
          ],
          "where": "Social Security Administration"
        },
        {
          "id": "ssn-application-receipt",
          "name": "Proof of SSN Application",
          "description": "Receipt showing you have applied for an SSN",
          "required": false,
          "alternatives": [
            "SSA application receipt"
          ],
          "where": "Social Security Administration office"
        }
      ],
      "nextSteps": [
        {
          "step": "If you need to apply for an SSN, visit your local Social Security office",
          "url": "https://www.ssa.gov/number-card",
          "priority": "high",
          "estimatedTime": "Same day to apply, 2-4 weeks to receive card"
        }
      ],
      "version": "1.0.0",
      "citations": [
        {
          "title": "SNAP Application Requirements",
          "url": "https://www.fns.usda.gov/snap/recipient/eligibility",
          "legalReference": "7 CFR ยง 273.6",
