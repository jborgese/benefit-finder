    {
      "id": "snap-federal-gross-income",
      "programId": "snap-federal",
      "name": "SNAP Gross Income Test",
      "description": "Household gross income must be at or below 130% of the federal poverty line",
      "ruleLogic": {
        "<=": [
          {
            "var": "householdIncome"
          },
          {
            "if": [
              {
                "<=": [
                  {
                    "var": "householdSize"
                  },
                  8
                ]
              },
              {
                "switch": [
                  {
                    "var": "householdSize"
                  },
                  {
                    "default": 0
                  },
                  {
                    "case": 1,
                    "do": 1696
                  },
                  {
                    "case": 2,
                    "do": 2292
                  },
                  {
                    "case": 3,
                    "do": 2888
                  },
                  {
                    "case": 4,
                    "do": 3483
                  },
                  {
                    "case": 5,
                    "do": 4079
                  },
                  {
                    "case": 6,
                    "do": 4675
                  },
                  {
                    "case": 7,
                    "do": 5271
                  },
                  {
                    "case": 8,
                    "do": 5867
                  }
                ]
              },
              {
                "+": [
                  5867,
                  {
                    "*": [
                      {
                        "-": [
                          {
                            "var": "householdSize"
                          },
                          8
                        ]
                      },
                      596
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "To qualify for SNAP, your household's gross monthly income must be at or below 130% of the federal poverty level. For 2024, this means: 1 person = $1,696/month, 2 people = $2,292/month, 3 people = $2,888/month, 4 people = $3,483/month. Add $596 per additional person.",
      "requiredFields": [
        "householdIncome",
        "householdSize"
      ],
      "requiredDocuments": [
        {
          "id": "proof-income",
          "name": "Proof of Income",
          "description": "Recent pay stubs, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2 forms",
            "1099 forms",
            "Bank statements",
            "Self-employment records"
          ],
          "where": "Employer, IRS, bank, or your own records"
        }
      ],
      "nextSteps": [
        {
          "step": "If you pass the gross income test, proceed to net income and asset tests",
          "priority": "high"
        }
      ],
      "version": "1.0.0",
      "citations": [
        {
