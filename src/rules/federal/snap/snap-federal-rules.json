    {
      "id": "snap-federal-work-requirement",
      "programId": "snap-federal",
      "name": "SNAP Work Requirements (ABAWD)",
      "description": "Able-bodied adults without dependents (ABAWD) ages 18-52 must work or participate in work programs",
      "ruleLogic": {
        "or": [
          {
            "!": {
              "var": "isABAWD"
            }
          },
          {
            "var": "meetsWorkRequirement"
          },
          {
            "var": "isExemptFromWork"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "If you are an able-bodied adult without dependents (ABAWD) between ages 18 and 52, you must work at least 80 hours per month, participate in a work program, or qualify for an exemption to receive SNAP for more than 3 months in a 36-month period. Exemptions include: having a disability, being pregnant, caring for a child under 18, being medically certified as unable to work, or living in an area with high unemployment.",
      "requiredFields": [
        "isABAWD",
        "meetsWorkRequirement",
        "isExemptFromWork"
      ],
      "requiredDocuments": [
        {
          "id": "proof-work",
          "name": "Proof of Work or Work Program Participation",
          "description": "Pay stubs, employer letter, work program enrollment verification",
          "required": false,
          "alternatives": [
            "Self-employment records",
            "Work program attendance records"
          ],
          "where": "Employer or work program administrator"
        }
      ],
      "nextSteps": [
        {
          "step": "If you are subject to ABAWD requirements, contact your local SNAP office about available work programs",
          "priority": "high",
          "estimatedTime": "Varies by program"
        }
      ],
      "version": "1.0.0",
