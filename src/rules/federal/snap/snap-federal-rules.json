    {
      "id": "snap-federal-citizenship",
      "programId": "snap-federal",
      "name": "SNAP Citizenship Requirement",
      "description": "Must be a U.S. citizen, U.S. national, or qualified immigrant",
      "ruleLogic": {
        "in": [
          {
            "var": "citizenship"
          },
          [
            "us_citizen",
            "us_national",
            "permanent_resident",
            "refugee",
            "asylee",
            "cuban_haitian",
            "amerasian",
            "trafficking_victim"
          ]
        ]
      },
      "ruleType": "eligibility",
      "explanation": "SNAP is available to U.S. citizens and certain categories of lawfully residing immigrants. Qualified immigrants include: lawful permanent residents (green card holders) who have lived in the U.S. for 5+ years, refugees, asylees, individuals granted withholding of deportation, Cuban and Haitian entrants, Amerasians, victims of trafficking, and certain other categories.",
      "requiredFields": [
        "citizenship"
      ],
      "requiredDocuments": [
        {
          "id": "proof-citizenship",
          "name": "Proof of Citizenship or Immigration Status",
          "description": "Birth certificate, passport, green card, or refugee documentation",
          "required": true,
          "alternatives": [
            "U.S. Passport",
            "Naturalization Certificate",
            "Green Card (I-551)",
            "I-94 Arrival/Departure Record",
            "I-766 Employment Authorization Document",
            "Refugee Travel Document"
          ],
          "where": "Government agency that issued the document (USCIS, State Department)"
        }
      ],
      "nextSteps": [
        {
          "step": "If you are a qualified immigrant, you may need to provide additional documentation about your immigration status and date of entry",
          "priority": "high"
        }
      ],
