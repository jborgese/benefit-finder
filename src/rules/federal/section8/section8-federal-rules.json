    {
      "id": "section8-federal-background-check",
      "programId": "section8-federal",
      "name": "Section 8 Background Check",
      "description": "Must pass criminal background check",
      "ruleLogic": {
        "and": [
          {
            "var": "hasCriminalHistory"
          },
          {
            "not": {
              "var": "hasDisqualifyingCrimes"
            }
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Applicants must pass a criminal background check. Certain crimes may disqualify applicants, including drug-related offenses, violent crimes, or sex offenses.",
      "requiredFields": [
        "hasCriminalHistory",
        "hasDisqualifyingCrimes"
      ],
      "requiredDocuments": [
        {
          "id": "proof-background",
          "name": "Background Check Documentation",
          "description": "Criminal background check results or court documentation",
          "required": true,
          "alternatives": [
            "Court records",
            "Probation/parole documentation",
            "Rehabilitation certificates"
          ],
          "where": "Court system, probation office, or background check service"
        }
      ],
      "nextSteps": [
        {
          "step": "Be prepared to discuss any criminal history and provide documentation",
          "priority": "medium"
        }
      ],
