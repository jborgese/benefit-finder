    {
      "id": "section8-federal-housing-need",
      "programId": "section8-federal",
      "name": "Section 8 Housing Need",
      "description": "Must demonstrate housing need (overcrowded, unsafe, or unaffordable housing)",
      "ruleLogic": {
        "or": [
          {
            "var": "isOvercrowded"
          },
          {
            "var": "isUnsafeHousing"
          },
          {
            "var": "isUnaffordableHousing"
          },
          {
            "var": "isHomeless"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Applicants must demonstrate a housing need, such as living in overcrowded conditions, unsafe housing, paying more than 30% of income for rent, or being homeless.",
      "requiredFields": [
        "isOvercrowded",
        "isUnsafeHousing",
        "isUnaffordableHousing",
        "isHomeless"
      ],
      "requiredDocuments": [
        {
          "id": "proof-housing-need",
          "name": "Proof of Housing Need",
          "description": "Current lease, utility bills, or documentation of housing conditions",
          "required": true,
          "alternatives": [
            "Landlord statement",
            "Housing inspection report",
            "Homeless shelter documentation"
          ],
          "where": "Current residence, landlord, or social services agency"
        }
      ],
      "nextSteps": [
        {
          "step": "Document your current housing situation and any problems",
          "priority": "high"
        }
      ],
