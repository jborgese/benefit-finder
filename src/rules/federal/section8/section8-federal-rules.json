  "rules": [
    {
      "id": "section8-federal-income-limits",
      "programId": "section8-federal",
      "name": "Section 8 Income Limits",
      "description": "Must have very low income (typically 50% of area median income or less)",
      "ruleLogic": {
        "and": [
          {
            "var": "householdIncome"
          },
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "var": "areaMedianIncome"
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Section 8 is designed for very low-income families. Income limits are typically 50% of the area median income (AMI) or less, though some housing authorities may serve families up to 80% AMI.",
      "requiredFields": [
        "householdIncome",
        "areaMedianIncome"
      ],
      "requiredDocuments": [
        {
          "id": "proof-income",
          "name": "Proof of Income",
          "description": "Pay stubs, tax returns, or other income verification",
          "required": true,
          "alternatives": [
            "Social Security award letters",
            "Unemployment benefit statements",
            "Child support documentation"
          ],
          "where": "Employer, Social Security Administration, or other income source"
        }
      ],
      "nextSteps": [
        {
          "step": "Contact your local housing authority to verify current income limits for your area",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "24 CFR 982.201 - Eligibility",
