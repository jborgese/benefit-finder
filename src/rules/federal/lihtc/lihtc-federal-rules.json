    {
      "id": "lihtc-federal-rental-history",
      "programId": "lihtc-federal",
      "name": "LIHTC Rental History",
      "description": "Must have good rental history and references",
      "ruleLogic": {
        "and": [
          {
            "var": "hasRentalHistory"
          },
          {
            "not": {
              "var": "hasEvictionHistory"
            }
          },
          {
            "not": {
              "var": "hasRentalDebt"
            }
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Applicants must have a good rental history with no recent evictions or outstanding rental debt. First-time renters may be considered with additional documentation.",
      "requiredFields": [
        "hasRentalHistory",
        "hasEvictionHistory",
        "hasRentalDebt"
      ],
      "requiredDocuments": [
        {
          "id": "proof-rental-history",
          "name": "Proof of Rental History",
          "description": "Previous lease agreements, landlord references, or rental payment history",
          "required": true,
          "alternatives": [
            "Rental payment receipts",
            "Landlord reference letters",
            "Housing assistance documentation"
          ],
          "where": "Previous landlords, rental agencies, or housing assistance programs"
        }
      ],
      "nextSteps": [
        {
          "step": "Gather rental history documentation and landlord references",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "26 USC § 42 - Low-income housing credit",
          "url": "https://www.law.cornell.edu/uscode/text/26/42",
          "legalReference": "26 USC § 42",
          "date": "2024-01-01",
          "notes": "Defines rental history requirements for LIHTC properties"
        }
      ],
      "active": true,
      "draft": false,
      "priority": 10,
      "testCases": [
        {
          "id": "test-good-rental-history",
          "description": "Good rental history - eligible",
          "input": {
            "hasRentalHistory": true,
            "hasEvictionHistory": false,
            "hasRentalDebt": false
