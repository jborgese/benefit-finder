    {
      "id": "snap-ga-application-process",
      "programId": "snap-georgia",
      "name": "Georgia SNAP Application Process",
      "description": "Information about applying for SNAP in Georgia",
      "ruleLogic": {
        "var": "livesInGeorgia"
      },
      "ruleType": "conditional",
      "explanation": "To apply for SNAP in Georgia: 1) Apply online at Gateway.GA.gov (fastest), 2) Apply by phone at 1-877-423-4746, 3) Visit a local Division of Family and Children Services (DFCS) office, or 4) Download and mail a paper application. You will have an interview (phone or in-person) within 30 days. Expedited service (within 7 days) is available for households with very low income or urgent need. Bring proof of identity, income, expenses, and household composition to your interview.",
      "requiredFields": ["livesInGeorgia"],
      "requiredDocuments": [
        {
          "id": "ga-application-documents",
          "name": "Application Documents Package",
          "description": "Comprehensive document list for Georgia SNAP application",
          "required": true,
          "alternatives": [],
          "where": "Various sources"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online at Gateway.GA.gov (recommended - fastest processing)",
          "url": "https://gateway.ga.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Call Georgia SNAP Hotline: 1-877-423-4746 for phone application",
          "priority": "medium"
        },
        {
          "step": "Find your local DFCS office: https://dfcs.georgia.gov/locations",
          "url": "https://dfcs.georgia.gov/locations",
          "priority": "medium"
        }
      ],
