  "metadata": {
    "id": "snap-georgia-rules-2024",
    "name": "Georgia SNAP Eligibility Rules (2024)",
    "description": "Georgia-specific SNAP (Supplemental Nutrition Assistance Program) eligibility rules for 2024. These rules supplement federal SNAP rules and reflect Georgia's implementation of the program.",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
    },
