  "rules": [
    {
      "id": "snap-ga-broad-based-categorical-eligibility",
      "programId": "snap-georgia",
      "name": "Georgia Broad-Based Categorical Eligibility (BBCE)",
      "description": "Georgia uses broad-based categorical eligibility, which eliminates asset tests and raises income limits for certain households",
      "ruleLogic": {
        "and": [
          {
            "<=": [
              { "var": "householdIncome" },
              {
                "*": [
                  { "var": "householdSize" },
                  2960
                ]
              }
            ]
          },
          {
            "or": [
              { "var": "receivedTANFBrochure" },
              { "var": "hasExpenses" }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Georgia expanded SNAP eligibility through Broad-Based Categorical Eligibility (BBCE). If your household receives TANF-funded services (even just an informational brochure) or has certain expenses, you may qualify with: 1) Gross income up to 200% of FPL ($2,960/month for 1 person in 2024), and 2) NO asset limit. This is more generous than federal SNAP rules. Most Georgia SNAP applicants qualify under BBCE.",
      "requiredFields": ["householdIncome", "householdSize", "receivedTANFBrochure", "hasExpenses"],
      "requiredDocuments": [
        {
          "id": "proof-income-ga",
          "name": "Proof of Income",
          "description": "Pay stubs, tax returns, or benefit statements",
          "required": true,
          "alternatives": ["W-2", "1099", "Bank statements", "Self-employment records"],
          "where": "Employer or your own records"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online at Gateway.GA.gov or visit your local Division of Family and Children Services (DFCS) office",
          "url": "https://gateway.ga.gov/",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "Georgia SNAP Broad-Based Categorical Eligibility",
          "url": "https://dfcs.georgia.gov/food-stamps",
          "date": "2024-10-01",
          "notes": "Georgia implements BBCE with 200% FPL income limit and no asset test"
        },
        {
          "title": "USDA FNS State BBCE Options",
          "url": "https://www.fns.usda.gov/snap/broad-based-categorical-eligibility",
          "date": "2024-10-01"
        }
      ],
      "active": true,
      "draft": false,
      "priority": 25,
      "testCases": [
        {
          "id": "test-ga-bbce-eligible",
          "description": "Household under 200% FPL with TANF brochure",
          "input": {
            "householdIncome": 2500,
            "householdSize": 1,
            "receivedTANFBrochure": true,
            "hasExpenses": false
          },
          "expected": true,
          "tags": ["eligible", "bbce", "georgia"]
        },
        {
          "id": "test-ga-bbce-eligible-expenses",
          "description": "Household under 200% FPL with expenses",
          "input": {
            "householdIncome": 2800,
            "householdSize": 1,
            "receivedTANFBrochure": false,
            "hasExpenses": true
          },
          "expected": true,
          "tags": ["eligible", "bbce", "expenses"]
        },
        {
          "id": "test-ga-bbce-ineligible-income",
          "description": "Income above 200% FPL",
          "input": {
            "householdIncome": 3500,
            "householdSize": 1,
            "receivedTANFBrochure": true,
            "hasExpenses": false
          },
          "expected": false,
          "tags": ["ineligible", "high-income"]
        },
        {
          "id": "test-ga-bbce-ineligible-no-connection",
          "description": "Under income limit but no TANF connection or expenses",
          "input": {
            "householdIncome": 2000,
            "householdSize": 1,
            "receivedTANFBrochure": false,
            "hasExpenses": false
          },
          "expected": false,
          "tags": ["ineligible", "no-bbce-connection"]
        }
      ],
      "createdAt": 1728777600000,
      "updatedAt": 1728777600000,
      "tags": ["bbce", "categorical-eligibility", "income", "georgia-specific"],
      "category": "categorical-eligibility",
      "jurisdiction": "US-GA"
    },
    {
      "id": "snap-ga-standard-deduction",
      "programId": "snap-georgia",
      "name": "Georgia SNAP Standard Deduction",
      "description": "Georgia uses federal standard deductions for net income calculation",
      "ruleLogic": {
        "if": [
          { "<=": [{ "var": "householdSize" }, 3] },
          193,
          {
            "if": [
              { "==": [{ "var": "householdSize" }, 4] },
              195,
              {
                "if": [
                  { "==": [{ "var": "householdSize" }, 5] },
                  228,
                  266
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "benefit_amount",
      "explanation": "Georgia follows federal standard deduction amounts when calculating net income: Households of 1-3 people: $193/month, 4 people: $195/month, 5 people: $228/month, 6+ people: $266/month. This deduction is automatically applied to your gross income to calculate net income for eligibility determination.",
      "requiredFields": ["householdSize"],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "SNAP Deductions",
          "url": "https://www.fns.usda.gov/snap/recipient/eligibility",
          "legalReference": "7 CFR ยง 273.9",
          "date": "2024-10-01"
        }
      ],
      "active": true,
      "draft": false,
      "priority": 15,
      "testCases": [
        {
          "id": "test-ga-deduction-small",
          "description": "Standard deduction for household of 2",
          "input": {
            "householdSize": 2
          },
          "expected": 193,
          "tags": ["deduction", "small-household"]
        },
        {
          "id": "test-ga-deduction-medium",
          "description": "Standard deduction for household of 4",
          "input": {
            "householdSize": 4
          },
          "expected": 195,
          "tags": ["deduction", "medium-household"]
        },
        {
          "id": "test-ga-deduction-large",
          "description": "Standard deduction for household of 6+",
          "input": {
            "householdSize": 7
          },
          "expected": 266,
          "tags": ["deduction", "large-household"]
        }
      ],
      "createdAt": 1728777600000,
      "updatedAt": 1728777600000,
      "tags": ["deductions", "net-income", "calculation"],
      "category": "benefit-calculation",
      "jurisdiction": "US-GA"
    },
    {
      "id": "snap-ga-abawd-exemption-counties",
      "programId": "snap-georgia",
      "name": "Georgia ABAWD County Exemptions",
      "description": "Certain Georgia counties have ABAWD time limit waivers due to high unemployment",
      "ruleLogic": {
        "or": [
          { "!": { "var": "isABAWD" } },
          { "var": "meetsWorkRequirement" },
          { "var": "isExemptFromWork" },
          {
            "in": [
              { "var": "county" },
              ["Clayton", "DeKalb", "Fulton"]
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Georgia implements federal ABAWD (Able-Bodied Adults Without Dependents) work requirements, but certain counties may have waivers. As of 2024, some high-unemployment counties in Georgia may be exempt from the 3-month time limit. Check with your local DFCS office for current county waiver status. If you live in an exempt county, you are not subject to the ABAWD time limits even if you don't work.",
      "requiredFields": ["isABAWD", "meetsWorkRequirement", "isExemptFromWork", "county"],
      "requiredDocuments": [
        {
          "id": "proof-address-county",
          "name": "Proof of County Residence",
          "description": "Document showing which Georgia county you live in",
          "required": false,
          "alternatives": ["Driver's license", "Utility bill", "Lease agreement"],
          "where": "DMV or utility company"
        }
      ],
      "nextSteps": [
        {
          "step": "Contact your local DFCS office to verify current ABAWD waiver status for your county",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "Georgia SNAP ABAWD Information",
          "url": "https://dfcs.georgia.gov/food-stamps",
          "date": "2024-10-01",
          "notes": "County waiver status changes periodically based on unemployment rates"
        },
