    {
      "id": "medicaid-co-application-process",
      "programId": "medicaid-colorado",
      "name": "Colorado Medicaid Application Process",
      "description": "Information about applying for Medicaid (Health First Colorado) in Colorado",
      "ruleLogic": {
        "var": "livesInColorado"
      },
      "ruleType": "conditional",
      "explanation": "Colorado uses the PEAK (Program Eligibility and Application Kit) system for all Medicaid applications. You can apply: 1) **Online at Colorado.gov/PEAK** (recommended - fastest, available 24/7), 2) **By phone** at 1-800-221-3943 (Health First Colorado Customer Service), 3) **In-person** at your local county Department of Human Services office. Most applications are processed within 45 days. Expedited processing is available for urgent medical needs. Colorado offers language assistance for non-English speakers.",
      "requiredFields": [
        "livesInColorado"
      ],
      "nextSteps": [
        {
          "step": "Apply online at Colorado PEAK (recommended - handles both Medicaid and marketplace plans)",
          "url": "https://www.colorado.gov/peak",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Call Health First Colorado Customer Service: 1-800-221-3943",
          "priority": "high"
        },
        {
          "step": "Find your local county Department of Human Services office",
          "url": "https://www.colorado.gov/pacific/cdhs/county-department-human-services-offices",
          "priority": "medium"
        }
      ],
