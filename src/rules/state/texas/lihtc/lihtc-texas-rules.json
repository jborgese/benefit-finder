  "rules": [
    {
      "id": "lihtc-tx-income-limit-50-percent",
      "programId": "lihtc-texas",
      "name": "Texas LIHTC Income Limit (50% AMI)",
      "description": "Household income must be at or below 50% of Area Median Income to qualify for LIHTC units",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInTexas"
          },
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "*": [
                  {
                    "var": "householdSize"
                  },
                  {
                    "var": "areaMedianIncome50Percent"
                  }
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "LIHTC properties have income limits based on Area Median Income (AMI). For 50% AMI units, household income must be at or below 50% of the local area median income. AMI varies by location - check your specific area. For example, in Houston: 1 person = $28,000/year, 2 people = $32,000/year, 3 people = $36,000/year, 4 people = $40,000/year.",
      "requiredFields": [
        "livesInTexas",
        "householdIncome",
        "householdSize",
        "areaMedianIncome50Percent"
      ],
      "requiredDocuments": [
        {
          "id": "proof-income-lihtc-tx",
          "name": "Proof of Income",
          "description": "Pay stubs from last 30 days, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2",
            "1099",
            "Bank statements",
            "Self-employment records"
          ],
          "where": "Employer or your records"
        }
      ],
      "nextSteps": [
        {
          "step": "Find LIHTC properties in your area",
          "url": "https://www.huduser.gov/portal/datasets/lihtc.html",
          "priority": "high",
          "estimatedTime": "30-60 minutes"
        },
        {
          "step": "Contact property management companies for availability",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "Texas LIHTC Income Limits",
          "url": "https://www.tdhca.state.tx.us/",
          "date": "2024-10-01",
          "notes": "LIHTC income limits based on Area Median Income"
        }
      ],
      "active": true,
      "draft": false,
      "priority": 30,
      "testCases": [
        {
          "id": "test-tx-lihtc-50-percent-eligible",
          "description": "Household under 50% AMI",
          "input": {
            "livesInTexas": true,
            "householdIncome": 25000,
            "householdSize": 1,
            "areaMedianIncome50Percent": 28000
          },
          "expected": true,
          "tags": [
            "eligible",
            "50-percent-ami"
          ]
        },
        {
          "id": "test-tx-lihtc-50-percent-ineligible",
          "description": "Household over 50% AMI",
          "input": {
            "livesInTexas": true,
            "householdIncome": 35000,
            "householdSize": 1,
            "areaMedianIncome50Percent": 28000
          },
          "expected": false,
          "tags": [
            "ineligible",
            "high-income"
          ]
        }
      ],
      "createdAt": 1728777600000,
      "updatedAt": 1728777600000,
      "tags": [
        "income",
        "50-percent-ami",
        "area-median-income"
      ],
      "category": "financial-eligibility",
      "jurisdiction": "US-TX"
    },
