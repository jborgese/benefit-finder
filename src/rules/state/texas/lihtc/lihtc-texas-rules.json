    {
      "id": "lihtc-tx-rent-limit",
      "programId": "lihtc-texas",
      "name": "Texas LIHTC Rent Limit",
      "description": "Rent for LIHTC units is capped at 30% of income or HUD Fair Market Rent",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInTexas"
          },
          {
            "<=": [
              {
                "var": "monthlyRent"
              },
              {
                "min": [
                  {
                    "*": [
                      {
                        "var": "householdIncome"
                      },
                      0.3
                    ]
                  },
                  {
                    "var": "hudFairMarketRent"
                  }
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "LIHTC units have rent limits to ensure affordability. Rent cannot exceed 30% of household income or the HUD Fair Market Rent for the area, whichever is lower. This ensures that low-income families can afford the housing. Rent limits vary by location and unit size.",
      "requiredFields": [
        "livesInTexas",
        "monthlyRent",
        "householdIncome",
        "hudFairMarketRent"
      ],
      "requiredDocuments": [
        {
          "id": "proof-rent-lihtc-tx",
          "name": "Proof of Rent",
          "description": "Lease agreement, rent receipts, or landlord statement",
          "required": true,
          "alternatives": [
            "Rent payment records",
            "Housing assistance documentation"
          ],
          "where": "Landlord or property management"
        }
      ],
      "nextSteps": [
        {
          "step": "Check if the rent for LIHTC units in your area is affordable",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "Texas LIHTC Rent Limits",
          "url": "https://www.tdhca.state.tx.us/",
          "date": "2024-10-01",
          "notes": "LIHTC rent limits based on 30% of income or HUD FMR"
        }
      ],
      "active": true,
      "draft": false,
      "priority": 20,
      "testCases": [
