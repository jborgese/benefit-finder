    {
      "id": "lihtc-tx-availability",
      "programId": "lihtc-texas",
      "name": "Texas LIHTC Availability",
      "description": "LIHTC units must be available in the area where you want to live",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInTexas"
          },
          {
            "var": "lihtcUnitsAvailable"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "LIHTC units are only available in properties that have been developed with Low-Income Housing Tax Credits. These properties are scattered throughout Texas and availability varies by location. You must find a LIHTC property in your desired area that has available units. Waiting lists are common due to high demand.",
      "requiredFields": [
        "livesInTexas",
        "lihtcUnitsAvailable"
      ],
      "nextSteps": [
        {
          "step": "Search for LIHTC properties in your area",
          "url": "https://www.huduser.gov/portal/datasets/lihtc.html",
          "priority": "high",
          "estimatedTime": "30-60 minutes"
        },
        {
          "step": "Contact property management companies for availability and waiting lists",
          "priority": "high"
        },
        {
          "step": "Consider multiple LIHTC properties to increase your chances",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
        {
          "title": "Texas LIHTC Properties",
          "url": "https://www.tdhca.state.tx.us/",
          "date": "2024-10-01",
          "notes": "LIHTC properties available throughout Texas"
        }
      ],
      "active": true,
      "draft": false,
      "priority": 15,
      "testCases": [
        {
          "id": "test-tx-lihtc-available",
          "description": "LIHTC units available in area",
          "input": {
            "livesInTexas": true,
            "lihtcUnitsAvailable": true
          },
          "expected": true,
          "tags": [
            "eligible",
            "units-available"
          ]
        },
        {
          "id": "test-tx-lihtc-not-available",
          "description": "No LIHTC units available in area",
          "input": {
