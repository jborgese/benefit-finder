    {
      "id": "lihtc-tx-application-process",
      "programId": "lihtc-texas",
      "name": "Texas LIHTC Application Process",
      "description": "Information about applying for LIHTC housing in Texas",
      "ruleLogic": {
        "var": "livesInTexas"
      },
      "ruleType": "conditional",
      "explanation": "LIHTC applications are processed directly by property management companies, not by government agencies. You must apply at each LIHTC property where you want to live. The process includes: 1) Income verification, 2) Background check, 3) Credit check, 4) References. Most properties have waiting lists due to high demand. You can apply at multiple properties to increase your chances.",
      "requiredFields": [
        "livesInTexas"
      ],
      "nextSteps": [
        {
          "step": "Find LIHTC properties in your area",
          "url": "https://www.huduser.gov/portal/datasets/lihtc.html",
          "priority": "high",
          "estimatedTime": "30-60 minutes"
        },
        {
          "step": "Contact each property management company for application process",
          "priority": "high",
          "estimatedTime": "1-2 hours per property"
        },
        {
          "step": "Apply at multiple properties to increase your chances",
          "priority": "high"
        }
      ],
