    {
      "id": "snap-tx-work-requirements",
      "programId": "snap-texas",
      "name": "Texas SNAP Work Requirements",
      "description": "Able-bodied adults without dependents (ABAWDs) must meet work requirements",
      "ruleLogic": {
        "or": [
          {
            "!": {
              "var": "isABAWD"
            }
          },
          {
            "var": "worksAtLeast20Hours"
          },
          {
            "var": "participatesInWorkProgram"
          },
          {
            "var": "isExemptFromWorkRequirements"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Able-bodied adults without dependents (ABAWDs) age 18-49 must work at least 20 hours per week, participate in a work program, or meet exemption criteria. Exemptions include: pregnant, disabled, caring for disabled household member, student meeting certain criteria, or living in area with high unemployment. Texas has work requirement waivers in some counties.",
      "requiredFields": [
        "isABAWD",
        "worksAtLeast20Hours",
        "participatesInWorkProgram",
        "isExemptFromWorkRequirements"
      ],
      "requiredDocuments": [
        {
          "id": "proof-work-tx",
          "name": "Proof of Work or Work Program",
          "description": "Pay stubs, work program participation letter",
          "required": false,
          "alternatives": [
            "Employer letter",
            "Work program documentation"
          ],
          "where": "Employer or work program"
        }
      ],
      "nextSteps": [
        {
          "step": "If you're an ABAWD, look for work programs in your area",
          "priority": "high"
        },
        {
          "step": "Check if your county has work requirement waivers",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
