    {
      "id": "snap-tx-asset-limit",
      "programId": "snap-texas",
      "name": "Texas SNAP Asset Limit",
      "description": "Household assets must be below $2,750 (or $4,250 if elderly/disabled)",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInTexas"
          },
          {
            "or": [
              {
                "and": [
                  {
                    "or": [
                      {
                        ">=": [
                          {
                            "var": "age"
                          },
                          60
                        ]
                      },
                      {
                        "var": "hasQualifyingDisability"
                      }
                    ]
                  },
                  {
                    "<": [
                      {
                        "var": "householdAssets"
                      },
                      4250
                    ]
                  }
                ]
              },
              {
                "and": [
                  {
                    "and": [
                      {
                        "<": [
                          {
                            "var": "age"
                          },
                          60
                        ]
                      },
                      {
                        "!": {
                          "var": "hasQualifyingDisability"
                        }
                      }
                    ]
                  },
                  {
                    "<": [
                      {
                        "var": "householdAssets"
                      },
                      2750
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Texas follows federal SNAP asset limits. Most households: assets must be below $2,750. Elderly (60+) or disabled households: assets must be below $4,250. Assets include: cash, bank accounts, stocks, bonds, real estate (except home), vehicles (except one). Excluded: home you live in, most retirement accounts, one vehicle per household, household goods.",
      "requiredFields": [
        "livesInTexas",
        "age",
        "hasQualifyingDisability",
        "householdAssets"
      ],
      "requiredDocuments": [
        {
          "id": "proof-assets-tx",
          "name": "Proof of Assets",
          "description": "Bank statements, vehicle titles, property deeds",
          "required": true,
          "alternatives": [
            "Investment statements",
            "Savings account statements",
            "Vehicle registration"
          ],
          "where": "Bank, DMV, or your records"
        }
      ],
      "nextSteps": [
        {
          "step": "Gather documentation of all assets including bank accounts and vehicles",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
      "citations": [
