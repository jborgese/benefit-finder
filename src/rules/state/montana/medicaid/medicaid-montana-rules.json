    {
      "id": "medicaid-mt-application-process",
      "programId": "medicaid-montana",
      "name": "Montana Medicaid Application Process",
      "description": "Information about applying for Medicaid in Montana",
      "ruleLogic": {
        "var": "livesInMontana"
      },
      "ruleType": "conditional",
      "explanation": "Montana uses Montana ACCESS and HELP Link for Medicaid applications. You can apply: 1) **Online through Montana ACCESS** (recommended - fastest, available 24/7), 2) **Online through HELP Link** for health coverage specifically, 3) **In-person** at your local Office of Public Assistance. Most applications are processed within 45 days. Expedited processing is available for urgent medical needs. Montana offers language assistance for non-English speakers.",
      "requiredFields": [
        "livesInMontana"
      ],
      "nextSteps": [
        {
          "step": "Apply online through Montana ACCESS (recommended)",
          "url": "https://apply.mt.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Or apply through HELP Link for health coverage",
          "url": "https://helplink.mt.gov/",
          "priority": "high"
