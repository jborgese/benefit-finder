    {
      "id": "medicaid-mt-pregnant-women",
      "programId": "medicaid-montana",
      "name": "Montana Medicaid for Pregnant Women",
      "description": "Pregnant women with income up to 157% FPL qualify for Medicaid in Montana",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInMontana"
          },
          {
            "var": "isPregnant"
          },
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "*": [
                  {
                    "var": "householdSize"
                  },
                  2320
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Montana covers pregnant women through Medicaid if household income is at or below 157% of the federal poverty level. For 2024, this means: 1 person = $2,320/month, 2 people = $3,142/month, 3 people = $3,964/month. Coverage includes prenatal care, delivery, and postpartum care for 60 days after pregnancy ends. Apply immediately when you learn you're pregnant - coverage can start right away.",
      "requiredFields": [
        "livesInMontana",
        "isPregnant",
        "householdIncome",
        "householdSize"
      ],
      "requiredDocuments": [
        {
          "id": "proof-pregnancy-mt",
          "name": "Proof of Pregnancy",
          "description": "Doctor's note, positive pregnancy test, or prenatal clinic verification",
          "required": true,
          "alternatives": [
            "Ultrasound results",
            "Prenatal appointment records"
          ],
          "where": "Healthcare provider or clinic"
        },
        {
          "id": "proof-income-pregnant-mt",
          "name": "Proof of Income",
          "description": "Pay stubs, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2",
            "1099",
            "Self-employment records"
          ],
          "where": "Employer or your records"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply immediately when you learn you're pregnant - coverage can start right away",
          "priority": "high",
          "estimatedTime": "Same day to 2 weeks"
        },
        {
          "step": "Apply online through Montana ACCESS or HELP Link",
          "url": "https://apply.mt.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Montana offers presumptive eligibility for pregnant women - temporary coverage while application is processed",
          "priority": "high"
        }
      ],
