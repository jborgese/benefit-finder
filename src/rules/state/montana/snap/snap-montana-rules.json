    {
      "id": "snap-mt-abawd-work-requirements",
      "programId": "snap-montana",
      "name": "Montana SNAP ABAWD Work Requirements",
      "description": "Able-Bodied Adults Without Dependents must meet work requirements or face time limits",
      "ruleLogic": {
        "or": [
          {
            "!": {
              "var": "isABAWD"
            }
          },
          {
            "var": "meetsWorkRequirement"
          },
          {
            "var": "isExemptFromWork"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Montana implements federal ABAWD (Able-Bodied Adults Without Dependents) work requirements. If you're 18-49, able-bodied, and don't have dependents, you must work or participate in work activities for at least 80 hours per month to receive SNAP beyond 3 months in a 36-month period. Some areas of Montana may have waivers based on unemployment rates. Exemptions include: students, people with disabilities, pregnant women, caregivers of children under 6, and people receiving unemployment benefits.",
      "requiredFields": [
        "isABAWD",
        "meetsWorkRequirement",
        "isExemptFromWork"
      ],
      "requiredDocuments": [
        {
          "id": "proof-work-activity-mt",
          "name": "Proof of Work Activity",
          "description": "Pay stubs, employer verification, or documentation of work program participation",
          "required": false,
          "alternatives": [
            "Employment verification letter",
            "Work program enrollment"
          ],
          "where": "Employer or work program"
        }
      ],
      "nextSteps": [
        {
          "step": "If subject to ABAWD rules, contact your local Office of Public Assistance to learn about available work programs",
          "priority": "medium"
        },
        {
          "step": "Check if your area has a waiver from ABAWD time limits due to high unemployment",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
