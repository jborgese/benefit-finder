    {
      "id": "snap-mt-application-process",
      "programId": "snap-montana",
      "name": "Montana SNAP Application Process",
      "description": "Information about applying for SNAP in Montana through the Office of Public Assistance",
      "ruleLogic": {
        "var": "livesInMontana"
      },
      "ruleType": "conditional",
      "explanation": "Montana uses Montana ACCESS for benefit applications. You can apply: 1) **Online through Montana ACCESS** (recommended - fastest, available 24/7), 2) **By phone** or **In-person** at your local Office of Public Assistance. Most applications are processed within 30 days. Expedited service (within 7 days) is available for households with urgent need and less than $150 in monthly gross income and liquid resources under $100, or if your rent/mortgage and utilities are more than your income and liquid resources.",
      "requiredFields": [
        "livesInMontana"
      ],
      "nextSteps": [
        {
          "step": "Apply online through Montana ACCESS (recommended - fastest method)",
          "url": "https://apply.mt.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Or visit your local Office of Public Assistance to apply in person",
          "priority": "high"
        },
        {
          "step": "Find your local Office of Public Assistance",
          "url": "https://dphhs.mt.gov/hcsd/contactus/publicassistance",
          "priority": "medium"
        }
      ],
