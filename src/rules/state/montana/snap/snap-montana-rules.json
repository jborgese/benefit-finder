  "rules": [
    {
      "id": "snap-mt-standard-eligibility",
      "programId": "snap-montana",
      "name": "Montana SNAP Standard Eligibility",
      "description": "Standard SNAP eligibility based on household income and size",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInMontana"
          },
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "*": [
                  {
                    "var": "householdSize"
                  },
                  1643
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "To qualify for SNAP in Montana, your household gross monthly income must be at or below 130% of the Federal Poverty Level. For 2024: 1 person = $1,643/month, 2 people = $2,226/month, 3 people = $2,808/month, 4 people = $3,390/month. Montana follows federal SNAP income guidelines. After applying the standard deduction and other deductions, your net income must be at or below 100% FPL to qualify.",
      "requiredFields": [
        "householdIncome",
        "householdSize",
        "livesInMontana"
      ],
      "requiredDocuments": [
        {
          "id": "proof-income-mt",
          "name": "Proof of Income",
          "description": "Pay stubs from last 30 days, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2",
            "1099",
            "Bank statements",
            "Self-employment records"
          ],
          "where": "Employer or your records"
        },
        {
          "id": "proof-identity-mt",
          "name": "Proof of Identity",
          "description": "Driver's license, state ID, or passport",
          "required": true,
          "alternatives": [
            "Birth certificate",
            "School ID with photo"
          ],
          "where": "DMV or State Department"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online through Montana ACCESS",
          "url": "https://apply.mt.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Alternative: Apply by phone or visit your local Office of Public Assistance",
          "priority": "high"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
