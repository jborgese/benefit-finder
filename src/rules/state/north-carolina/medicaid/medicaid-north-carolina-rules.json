    {
      "id": "medicaid-nc-application-process",
      "programId": "medicaid-north-carolina",
      "name": "North Carolina Medicaid Application Process",
      "description": "Information about applying for Medicaid in North Carolina",
      "ruleLogic": {
        "var": "livesInNorthCarolina"
      },
      "ruleType": "conditional",
      "explanation": "North Carolina uses ePASS and NC Medicaid for Medicaid applications. You can apply: 1) **Online through ePASS** (recommended - fastest, available 24/7), 2) **Online through NC Medicaid**, 3) **By phone** at 1-888-245-0179, 4) **In-person** at your local Department of Social Services office. Most applications are processed within 45 days. Expedited processing is available for urgent medical needs. North Carolina offers language assistance for non-English speakers.",
      "requiredFields": [
        "livesInNorthCarolina"
      ],
      "nextSteps": [
        {
          "step": "Apply online through ePASS (recommended)",
          "url": "https://epass.nc.gov/CitizenPortal/application.do",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Or apply through NC Medicaid",
          "url": "https://medicaid.ncdhhs.gov/",
          "priority": "high"
        },
        {
          "step": "Call North Carolina Medicaid: 1-888-245-0179",
          "priority": "high"
        }
      ],
