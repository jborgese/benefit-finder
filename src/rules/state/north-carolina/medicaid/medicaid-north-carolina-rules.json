    {
      "id": "medicaid-nc-pregnant-women",
      "programId": "medicaid-north-carolina",
      "name": "North Carolina Medicaid for Pregnant Women",
      "description": "Pregnant women with income up to 196% FPL qualify for Medicaid in North Carolina",
      "ruleLogic": {
        "and": [
          {
            "var": "livesInNorthCarolina"
          },
          {
            "var": "isPregnant"
          },
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "*": [
                  {
                    "var": "householdSize"
                  },
                  2897
                ]
              }
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "North Carolina covers pregnant women through Medicaid if household income is at or below 196% of the federal poverty level. For 2024, this means: 1 person = $2,897/month, 2 people = $3,925/month, 3 people = $4,953/month. Coverage includes prenatal care, delivery, and postpartum care for 60 days after pregnancy ends. Apply immediately when you learn you're pregnant - coverage can start right away.",
      "requiredFields": [
        "livesInNorthCarolina",
        "isPregnant",
        "householdIncome",
        "householdSize"
      ],
      "requiredDocuments": [
        {
          "id": "proof-pregnancy-nc",
          "name": "Proof of Pregnancy",
          "description": "Doctor's note, positive pregnancy test, or prenatal clinic verification",
          "required": true,
          "alternatives": [
            "Ultrasound results",
            "Prenatal appointment records"
          ],
          "where": "Healthcare provider or clinic"
        },
        {
          "id": "proof-income-pregnant-nc",
          "name": "Proof of Income",
          "description": "Pay stubs, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2",
            "1099",
            "Self-employment records"
          ],
          "where": "Employer or your records"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply immediately when you learn you're pregnant - coverage can start right away",
          "priority": "high",
          "estimatedTime": "Same day to 2 weeks"
        },
        {
          "step": "Apply online through ePASS or NC Medicaid",
          "url": "https://epass.nc.gov/CitizenPortal/application.do",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "North Carolina offers presumptive eligibility for pregnant women - temporary coverage while application is processed",
          "priority": "high"
        }
      ],
