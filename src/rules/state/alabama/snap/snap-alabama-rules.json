    {
      "id": "snap-al-abawd-requirements",
      "programId": "snap-alabama",
      "name": "Alabama ABAWD Work Requirements",
      "description": "Alabama implements federal ABAWD time limit and work requirements",
      "ruleLogic": {
        "or": [
          {
            "!": {
              "var": "isABAWD"
            }
          },
          {
            "var": "meetsWorkRequirement"
          },
          {
            "var": "isExemptFromWork"
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "Alabama implements federal ABAWD (Able-Bodied Adults Without Dependents) work requirements. If you're 18-49, able-bodied, and without dependents, you must work or participate in work activities at least 80 hours per month to continue receiving SNAP after 3 months in a 36-month period. Exemptions include: age under 18 or over 49, pregnant, caring for a child under 6, physically or mentally unable to work, receiving disability benefits, or meeting other exemptions. Check with your local DHR office for current exemption status.",
      "requiredFields": [
        "isABAWD",
        "meetsWorkRequirement",
        "isExemptFromWork"
      ],
      "requiredDocuments": [
        {
          "id": "proof-work-activity",
          "name": "Proof of Work Activity",
          "description": "Pay stubs, employer letter, or documentation of work activities",
          "required": false,
          "alternatives": [
            "Timesheet",
            "Job training certificate",
            "Community service verification"
          ],
          "where": "Employer or program administrator"
        }
      ],
      "nextSteps": [
        {
          "step": "Contact your local DHR office to verify ABAWD status and exemptions",
          "priority": "high"
        },
        {
          "step": "If subject to work requirements, register with Alabama JobLink for work activities",
          "url": "https://joblink.alabama.gov/",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
