  "rules": [
    {
      "id": "snap-al-standard-eligibility",
      "programId": "snap-alabama",
      "name": "Alabama SNAP Standard Eligibility",
      "description": "Alabama follows federal SNAP eligibility guidelines with gross income at or below 130% of Federal Poverty Level",
      "ruleLogic": {
        "and": [
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "*": [
                  {
                    "var": "householdSize"
                  },
                  1643
                ]
              }
            ]
          },
          {
            "==": [
              {
                "var": "has_eligible_citizenship"
              },
              true
            ]
          },
          {
            "==": [
              {
                "var": "state"
              },
              "AL"
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "To qualify for SNAP in Alabama, your household gross monthly income must be at or below 130% of the Federal Poverty Level for your household size ($1,643/month for 1 person in 2024), and you must be a US citizen or eligible non-citizen. Alabama uses standard federal income limits and asset tests.",
      "requiredFields": [
        "householdIncome",
        "householdSize",
        "has_eligible_citizenship",
        "state"
      ],
      "requiredDocuments": [
        {
          "id": "proof-income-al",
          "name": "Proof of Income",
          "description": "Pay stubs, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2",
            "1099",
            "Bank statements",
            "Self-employment records"
          ],
          "where": "Employer or your own records"
        },
        {
          "id": "proof-identity-al",
          "name": "Proof of Identity",
          "description": "Valid photo ID for all household members applying",
          "required": true,
          "alternatives": [
            "Driver's license",
            "State ID",
            "Passport",
            "Birth certificate"
          ],
          "where": "DMV or vital records office"
        },
        {
          "id": "proof-residency-al",
          "name": "Proof of Alabama Residency",
          "description": "Document showing you live in Alabama",
          "required": true,
          "alternatives": [
            "Utility bill",
            "Lease agreement",
            "Rent receipt",
            "Mortgage statement"
          ],
          "where": "Utility company, landlord, or mortgage company"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online at MyAlabama.gov or visit your local DHR office",
          "url": "https://www.myalabama.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Call Alabama DHR SNAP Hotline: 1-800-410-5827",
          "priority": "medium"
        },
        {
          "step": "Find your local DHR office: https://dhr.alabama.gov/office-locator/",
          "url": "https://dhr.alabama.gov/office-locator/",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
