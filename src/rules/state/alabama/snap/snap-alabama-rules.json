    {
      "id": "snap-al-application-process",
      "programId": "snap-alabama",
      "name": "Alabama SNAP Application Process",
      "description": "Information about applying for SNAP in Alabama",
      "ruleLogic": {
        "var": "livesInAlabama"
      },
      "ruleType": "conditional",
      "explanation": "To apply for SNAP in Alabama: 1) Apply online at MyAlabama.gov (fastest), 2) Apply by phone at 1-800-410-5827, 3) Visit a local Department of Human Resources (DHR) office, or 4) Download and mail a paper application. You will have an interview (phone or in-person) within 30 days. Expedited service (within 7 days) is available for households with very low income or urgent need. Bring proof of identity, income, expenses, and household composition to your interview.",
      "requiredFields": [
        "livesInAlabama"
      ],
      "requiredDocuments": [
        {
          "id": "al-application-documents",
          "name": "Application Documents Package",
          "description": "Comprehensive document list for Alabama SNAP application",
          "required": true,
          "alternatives": [],
          "where": "Various sources"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online at MyAlabama.gov (recommended - fastest processing)",
          "url": "https://www.myalabama.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Call Alabama DHR SNAP Hotline: 1-800-410-5827 for phone application",
          "priority": "medium"
        },
        {
          "step": "Find your local DHR office: https://dhr.alabama.gov/office-locator/",
          "url": "https://dhr.alabama.gov/office-locator/",
          "priority": "medium"
        }
      ],
