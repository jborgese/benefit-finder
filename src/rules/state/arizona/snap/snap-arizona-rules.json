  "rules": [
    {
      "id": "snap-az-standard-eligibility",
      "programId": "snap-arizona",
      "name": "Arizona SNAP Standard Eligibility",
      "description": "Arizona follows federal SNAP eligibility guidelines with gross income at or below 130% of Federal Poverty Level",
      "ruleLogic": {
        "and": [
          {
            "<=": [
              {
                "var": "householdIncome"
              },
              {
                "*": [
                  {
                    "var": "householdSize"
                  },
                  1643
                ]
              }
            ]
          },
          {
            "==": [
              {
                "var": "has_eligible_citizenship"
              },
              true
            ]
          },
          {
            "==": [
              {
                "var": "state"
              },
              "AZ"
            ]
          }
        ]
      },
      "ruleType": "eligibility",
      "explanation": "To qualify for SNAP in Arizona, your household gross monthly income must be at or below 130% of the Federal Poverty Level for your household size ($1,643/month for 1 person in 2024), and you must be a US citizen or eligible non-citizen. Arizona uses standard federal income limits and asset tests.",
      "requiredFields": [
        "householdIncome",
        "householdSize",
        "has_eligible_citizenship",
        "state"
      ],
      "requiredDocuments": [
        {
          "id": "proof-income-az",
          "name": "Proof of Income",
          "description": "Pay stubs, tax returns, or benefit statements",
          "required": true,
          "alternatives": [
            "W-2",
            "1099",
            "Bank statements",
            "Self-employment records"
          ],
          "where": "Employer or your own records"
        },
        {
          "id": "proof-identity-az",
          "name": "Proof of Identity",
          "description": "Valid photo ID for all household members applying",
          "required": true,
          "alternatives": [
            "Driver's license",
            "State ID",
            "Passport",
            "Birth certificate"
          ],
          "where": "DMV or vital records office"
        },
        {
          "id": "proof-residency-az",
          "name": "Proof of Arizona Residency",
          "description": "Document showing you live in Arizona",
          "required": true,
          "alternatives": [
            "Utility bill",
            "Lease agreement",
            "Rent receipt",
            "Mortgage statement"
          ],
          "where": "Utility company, landlord, or mortgage company"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online at Health-e-Arizona Plus or visit your local DES office",
          "url": "https://www.healthearizonaplus.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Call Arizona DES Information Line: 1-855-432-7587",
          "priority": "medium"
        },
        {
          "step": "Find your local DES office: https://des.az.gov/services/basic-needs/food-assistance",
          "url": "https://des.az.gov/services/basic-needs/food-assistance",
          "priority": "medium"
        }
      ],
      "version": {
        "major": 1,
        "minor": 0,
        "patch": 0
      },
