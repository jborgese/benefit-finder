    {
      "id": "snap-az-application-process",
      "programId": "snap-arizona",
      "name": "Arizona SNAP Application Process",
      "description": "Information about applying for SNAP in Arizona",
      "ruleLogic": {
        "var": "livesInArizona"
      },
      "ruleType": "conditional",
      "explanation": "To apply for SNAP in Arizona: 1) Apply online at Health-e-Arizona Plus (fastest), 2) Apply by phone at 1-855-432-7587, 3) Visit a local DES office, or 4) Download and mail a paper application. You will have an interview (phone or in-person) within 30 days. Expedited service (within 7 days) is available for households with very low income or urgent need. Bring proof of identity, income, expenses, and household composition to your interview.",
      "requiredFields": [
        "livesInArizona"
      ],
      "requiredDocuments": [
        {
          "id": "az-application-documents",
          "name": "Application Documents Package",
          "description": "Comprehensive document list for Arizona SNAP application",
          "required": true,
          "alternatives": [],
          "where": "Various sources"
        }
      ],
      "nextSteps": [
        {
          "step": "Apply online at Health-e-Arizona Plus (recommended - fastest processing)",
          "url": "https://www.healthearizonaplus.gov/",
          "priority": "high",
          "estimatedTime": "30-45 minutes"
        },
        {
          "step": "Call Arizona DES Information Line: 1-855-432-7587 for phone application",
          "priority": "medium"
        },
        {
          "step": "Find your local DES office: https://des.az.gov/services/basic-needs/food-assistance",
          "url": "https://des.az.gov/services/basic-needs/food-assistance",
          "priority": "medium"
        }
